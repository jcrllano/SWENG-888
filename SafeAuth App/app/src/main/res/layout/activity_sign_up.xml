<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="24dp" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <!--Displays a static title Create Account-->
    <TextView android:text="Create Account"
              android:textSize="22sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
    <!--This set the user full name-->
    <EditText android:id="@+id/etName"
              android:hint="Full Name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
    <!--This is the user email-->
    <EditText android:id="@+id/etEmail"
              android:hint="Email"
              android:inputType="textEmailAddress"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
    <!--This is the user password-->
    <EditText android:id="@+id/etPassword"
              android:hint="Password"
              android:inputType="textPassword"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
    <!--This is the button to create the account-->
    <Button android:id="@+id/btnCreate"
            android:text="Create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>
