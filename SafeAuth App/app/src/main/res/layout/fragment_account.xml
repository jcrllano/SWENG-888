<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="24dp" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <!--This show the welcome user on the account display-->
    <TextView android:id="@+id/tvWelcome"
              android:text="Welcome,"
              android:textSize="20sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
    <!--This show the email user on the account display-->
    <TextView android:id="@+id/tvEmail"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
</LinearLayout>