<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <!--This is input box for the title of the item-->
    <EditText android:id="@+id/etTitle"
              android:hint="Title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
    <!--This is input box for the description of the item-->
    <EditText android:id="@+id/etDesc"
              android:hint="Description"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
</LinearLayout>